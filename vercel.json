{
  "buildCommand": "pnpm run build:client",
  "outputDirectory": "dist/spa",
  "framework": null,
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Permissions-Policy", "value": "midi=(self), microphone=(self)" }
      ]
    }
  ]
}
