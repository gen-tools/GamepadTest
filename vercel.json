{
  "buildCommand": "pnpm run build:client",
  "outputDirectory": "dist/spa",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "midi=(self), microphone=(self)"
        }
      ]
    }
  ]
}
